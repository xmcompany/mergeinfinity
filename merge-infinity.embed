<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Merge Infinity</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 10px;
    }
    .score-board { display: flex; gap: 10px; margin-bottom: 15px; }
    .score-box {
      background: #252542;
      padding: 8px 20px;
      border-radius: 8px;
      text-align: center;
    }
    .score-box label { color: #a0a0b8; font-size: 11px; text-transform: uppercase; }
    .score-box .value { color: #fff; font-size: 20px; font-weight: bold; }
    #game-container {
      background: #252542;
      border-radius: 12px;
      padding: 12px;
      position: relative;
    }
    #game-board {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
      background: #1a1a2e;
      padding: 8px;
      border-radius: 8px;
    }
    .cell {
      width: 70px;
      height: 70px;
      background: #2d2d4a;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 26px;
      font-weight: bold;
      color: #fff;
      transition: all 0.12s ease;
    }
    .cell[data-value="2"] { background: #eee4da; color: #776e65; }
    .cell[data-value="4"] { background: #ede0c8; color: #776e65; }
    .cell[data-value="8"] { background: #f2b179; color: #fff; }
    .cell[data-value="16"] { background: #f59563; color: #fff; }
    .cell[data-value="32"] { background: #f67c5f; color: #fff; }
    .cell[data-value="64"] { background: #f65e3b; color: #fff; }
    .cell[data-value="128"] { background: #edcf72; color: #fff; font-size: 22px; }
    .cell[data-value="256"] { background: #edcc61; color: #fff; font-size: 22px; }
    .cell[data-value="512"] { background: #edc850; color: #fff; font-size: 22px; }
    .cell[data-value="1024"] { background: #edc53f; color: #fff; font-size: 18px; }
    .cell[data-value="2048"] { background: #edc22e; color: #fff; font-size: 18px; }
    .cell.high { background: linear-gradient(135deg, #667eea, #764ba2); font-size: 16px; }
    .cell.pop { animation: pop 0.15s ease; }
    @keyframes pop { 0%{transform:scale(0)} 50%{transform:scale(1.1)} 100%{transform:scale(1)} }
    .btn {
      margin-top: 12px;
      padding: 10px 25px;
      border: none;
      border-radius: 20px;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #fff;
    }
    .game-over {
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.85);
      display: none;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
    }
    .game-over.show { display: flex; }
    .game-over h2 { color: #f093fb; font-size: 1.5rem; margin-bottom: 8px; }
    .game-over p { color: #a0a0b8; margin-bottom: 15px; }
    @media (max-width: 350px) {
      .cell { width: 60px; height: 60px; font-size: 22px; }
    }
  </style>
</head>
<body>
  <div class="score-board">
    <div class="score-box"><label>Score</label><div class="value" id="score">0</div></div>
    <div class="score-box"><label>Best</label><div class="value" id="best">0</div></div>
  </div>
  <div id="game-container">
    <div id="game-board"></div>
    <div class="game-over" id="game-over">
      <h2>Game Over!</h2>
      <p>Score: <span id="final-score">0</span></p>
      <button class="btn" onclick="game.restart()">Play Again</button>
    </div>
  </div>
  <button class="btn" onclick="game.restart()">New Game</button>
  <script>
    const game = {
      board: [], score: 0,
      best: parseInt(localStorage.getItem('miBest')) || 0,
      init() {
        this.board = Array(16).fill(0);
        this.score = 0;
        this.addTile(); this.addTile();
        this.render();
        document.getElementById('best').textContent = this.best;
        document.getElementById('game-over').classList.remove('show');
      },
      addTile() {
        const empty = this.board.map((v,i) => v===0?i:-1).filter(i=>i>=0);
        if (!empty.length) return false;
        const idx = empty[Math.floor(Math.random()*empty.length)];
        this.board[idx] = Math.random()<0.9?2:4;
        return idx;
      },
      render() {
        const el = document.getElementById('game-board');
        el.innerHTML = '';
        this.board.forEach(val => {
          const c = document.createElement('div');
          c.className = 'cell';
          if (val) { c.textContent = val; c.dataset.value = val; if(val>2048) c.classList.add('high'); }
          el.appendChild(c);
        });
        document.getElementById('score').textContent = this.score;
      },
      move(dir) {
        let moved = false;
        const process = (indices) => {
          let line = indices.map(i=>this.board[i]).filter(v=>v>0), merged = [];
          for (let i=0; i<line.length; i++) {
            if (i<line.length-1 && line[i]===line[i+1]) { merged.push(line[i]*2); this.score+=line[i]*2; i++; }
            else merged.push(line[i]);
          }
          while (merged.length<4) merged.push(0);
          indices.forEach((idx,i) => { if(this.board[idx]!==merged[i]) moved=true; this.board[idx]=merged[i]; });
        };
        for (let i=0; i<4; i++) {
          let idx;
          if (dir==='left') idx=[0,1,2,3].map(c=>i*4+c);
          else if (dir==='right') idx=[3,2,1,0].map(c=>i*4+c);
          else if (dir==='up') idx=[0,1,2,3].map(r=>r*4+i);
          else idx=[3,2,1,0].map(r=>r*4+i);
          process(idx);
        }
        if (moved) {
          const newIdx = this.addTile();
          this.render();
          if (newIdx!==false) setTimeout(()=>document.getElementById('game-board').children[newIdx].classList.add('pop'),10);
          if (this.score>this.best) { this.best=this.score; localStorage.setItem('miBest',this.best); document.getElementById('best').textContent=this.best; }
          if (this.isOver()) { document.getElementById('final-score').textContent=this.score; document.getElementById('game-over').classList.add('show'); }
        }
      },
      isOver() {
        if (this.board.includes(0)) return false;
        for (let i=0; i<16; i++) { if(i%4<3&&this.board[i]===this.board[i+1]) return false; if(i<12&&this.board[i]===this.board[i+4]) return false; }
        return true;
      },
      restart() { this.init(); }
    };
    game.init();
    document.addEventListener('keydown', e => {
      if(['ArrowLeft','ArrowRight','ArrowUp','ArrowDown'].includes(e.key)) { e.preventDefault(); game.move(e.key.replace('Arrow','').toLowerCase()); }
    });
    let tx,ty;
    document.addEventListener('touchstart', e => { tx=e.touches[0].clientX; ty=e.touches[0].clientY; });
    document.addEventListener('touchend', e => {
      const dx=e.changedTouches[0].clientX-tx, dy=e.changedTouches[0].clientY-ty;
      if (Math.abs(dx)>Math.abs(dy)&&Math.abs(dx)>30) game.move(dx>0?'right':'left');
      else if (Math.abs(dy)>30) game.move(dy>0?'down':'up');
    });
  </script>
</body>
</html>